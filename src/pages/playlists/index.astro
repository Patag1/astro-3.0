---
import Layout from '../../layouts/Layout.astro'
import Main from '../../components/Main.astro'
import { Image } from 'astro:assets'
import { ViewTransitions } from 'astro:transitions'
---

<Layout title="Playlists">
  <Main>
    <article>
      <div class="flex justify-between items-center">
        <h1
          class="mb-4 text-4xl font-bold transition-colors duration-500"
        >
          Playlists
        </h1>
        <a
          href="/"
          class="px-2 pt-0 pb-1 bg-[#23262d] opacity-80 hover:opacity-100 transition-opacity duration-500 text-white text-xl font-semibold rounded"
        >
          back
        </a>
      </div>
      <p>
        These are playlist that I've made exclusively for developers during
        their coding sessions. Just an amateur DJ here...
      </p>
      <Image
        src="https://i.imgur.com/CNIsgIP.png"
        alt="music"
        width={50}
        height={50}
        class="w-64 mx-auto my-16 p-4 aspect-square bg-white"
        transition:name="Playlists"
      />
    </article>
    <article class="flex flex-col gap-y-6">
      <iframe
        style="border-radius:12px"
        src="https://open.spotify.com/embed/playlist/66cYkZTFtuwp17Q53KR8qn?utm_source=generator"
        width="100%"
        height="352"
        allowfullscreen=""
        allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
        loading="lazy"></iframe>
      <iframe
        style="border-radius:12px"
        src="https://open.spotify.com/embed/playlist/1pTSoqm75Q9bd759BTOy7r?utm_source=generator"
        width="100%"
        height="352"
        allowfullscreen=""
        allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
        loading="lazy"></iframe>
    </article>
    <ViewTransitions />
  </Main>
</Layout>
